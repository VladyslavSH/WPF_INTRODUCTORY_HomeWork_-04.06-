<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="100" ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="5" BorderBrush="Coral">
            <TextBox Name="textBox" Padding="2" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"></TextBox>
        </Border>
        <StackPanel Grid.Column="2">
            <Button Name="Copy" Height="20" Margin="5" Background="Yellow" MouseEnter="Copy_MouseEnter">Copy</Button>
            <Button Name="Paste" Height="20" Margin="5" Background="Yellow" Click="Paste_Click">Paste</Button>
            <Button Name="Cut" Height="20" Margin="5" Background="Yellow" Click="Cut_Click">Cut</Button>
            <Button Name="SelectAll" Height="20" Margin="5" Background="Yellow" Click="SelectAll_Click">Select All</Button>
        </StackPanel>
    </Grid>
</Window>
